{
  "name": "structured-start-tab",
  "version": "1.9.0",
  "description": "Structured Start Tab",
  "author": "Rich Boakes <rich@boakes.org>",
  "contributors": [
    "Rich Boakes <rich@boakes.org>",
    "Jacek Kopeck√Ω <jacek@jacek.cz>",
    "Thomas PIENNE <https://github.com/toto101230>",
    "Yassine SMARA <yassine.smara@laposte.net>",
    "Adriano Boccardo Pochettino <https://github.com/adrianoBP>"
  ],
  "license": "MPL-2.0",
  "main": "index.js",
  "scripts": {
    "lint": "npx eslint src --ext .js,.jsx",
    "build": "rm -rf app && mkdir app && cp -R src/* app",
    "zip": "rm sst.zip;rm sst.xpi;find . -name '.DS_Store' -type f -delete;zip -u -8 -v -r sst.zip app _locales manifest.json release.md;cp sst.zip sst.xpi;echo 'bump versions in releases.md, manifest.json and package.json...'",
    "all": "npm run validatelogs;npm run build;npm run zip;",
    "preversion": "npm run lint",
    "version": "node update-manifest-version.js; git add manifest.json;",
    "postversion": "npm run all",
    "validatelogs": "if grep -qr 'console.log' src/; then echo 'WARNING: console.log were left in the code!'; fi"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ear1grey/structured-start-tab.git"
  },
  "type": "module",
  "devDependencies": {
    "eslint": "^8.27.0",
    "eslint-config-portsoc": "^1.0.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "ignorePatterns": [
      "node_modules",
      "app"
    ],
    "extends": [
      "portsoc"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly",
      "chrome": "readonly"
    },
    "root": true,
    "rules": {
      "no-restricted-syntax": 0,
      "no-unused-expressions": 0
    }
  }
}
